@model List<CourseVM>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">All Courses</h1>

</div>

<div class="container">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">

                    <div class="card-header p-0">
                        <img src="data:image/png;base64,@Convert.ToBase64String(@course.Image)" alt="Course Image" class="img-fluid rounded-top">
                    </div>

                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h5 class="card-title">@course.Name</h5>
                        <p class="card-text text-muted mb-2">Instructor: @course.Teacher.FullName</p>
                        <p class="card-text text-muted mb-3">Classes: @course.NoOfClasses</p>
                        <a asp-controller="Home" asp-action="CourseDetail" asp-route-CourseID=@course.Id class="btn btn-primary mt-3">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    .card {
        width: 300px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin: 20px;
        overflow: hidden;
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .card-header {
        position: relative;
    }

       
    .course-info {
        position: absolute;
        bottom: 10px;
        left: 10px;
        display: flex;
        color: #fff;
    }

        .course-info .badge,
        .course-info .seats-remaining,
        .course-info .days-remaining {
            background-color: rgba(0, 0, 0, 0.5);
            padding: 5px;
            margin-bottom: 5px;
            border-radius: 5px;
            font-size: 14px;
        }

    .card-body {
        padding: 15px;
        text-align: center;
    }

        .card-body h3 {
            font-size: 18px;
            margin-bottom: 15px;
            color: #333;
        }

   

     .details-button:hover {
         background-color: #0056b3;
     }

    .card-title {
        margin: 0 auto;
        max-width: 100%;
        white-space: nowrap;
        text-align: center;
        font-weight: bold;
        font-size: 1.10rem;
    }

    .card-header img {
        max-height: 200px;
        object-fit: cover;
    }

    .card-text {
        font-size: 0.9rem;
    }

    .details-button {
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 500;
    }


</style>