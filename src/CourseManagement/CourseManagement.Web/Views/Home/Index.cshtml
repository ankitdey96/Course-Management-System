@model List<CourseVM>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">All Courses</h1>

</div>

<div class="container">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    
                    <div class="card-header">
                        <img src="data:image/png;base64,@Convert.ToBase64String(@course.Image)" alt="Course Image">
                    </div>

                    <div class="card-body">
@*                         <div class="course-info">
                            <div class="badge">@course.NoOfClasses</div>
                            <div class="seats-remaining">@course.Fees</div>
                            <div class="days-remaining">@course.Teacher.FullName</div>
                        </div>
 *@                     <h3>@course.Name</h3>
                        <a asp-controller="Home" asp-action="CourseDetail" asp-route-CourseID=@course.Id class="details-button">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    .card {
        width: 300px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin: 20px;
        overflow: hidden;
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .card-header {
        position: relative;
    }

        .card-header img {
            width: 100%;
            height: 70%;
            display: block;
        }

    .course-info {
        position: absolute;
        bottom: 10px;
        left: 10px;
        display: flex;
        color: #fff;
    }

        .course-info .badge,
        .course-info .seats-remaining,
        .course-info .days-remaining {
            background-color: rgba(0, 0, 0, 0.5);
            padding: 5px;
            margin-bottom: 5px;
            border-radius: 5px;
            font-size: 14px;
        }

    .card-body {
        padding: 15px;
        text-align: center;
    }

        .card-body h3 {
            font-size: 18px;
            margin-bottom: 15px;
            color: #333;
        }

    .details-button {
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 5px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

        .details-button:hover {
            background-color: #0056b3;
        }

</style>