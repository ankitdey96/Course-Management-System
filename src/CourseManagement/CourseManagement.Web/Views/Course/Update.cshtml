@model CourseVM
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Course </h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="row" enctype="multipart/form-data" asp-controller="Course" asp-action="Update" asp-antiforgery="true">
            <input type="hidden" asp-for="Id" />

            <div class="p-3">

                <div asp-validation-summary="All"></div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Name" class="form-control border shadow" />
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" class="form-control border shadow" />
                    <label asp-for="Description">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Fees" class="form-control border shadow" type="number" />
                    <label asp-for="Fees"></label>
                    <span asp-validation-for="Fees" class="text-danger"></span>

                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="NoOfClasses" class="form-control border shadow" />
                    <label asp-for="NoOfClasses">No Of Classes</label>
                    <span asp-validation-for="NoOfClasses" class="text-danger"></span>

                </div>

                @*  <div class="form-floating py-1 col-12">
                <input asp-for="Image" class="form-control border shadow" />
                <label asp-for="ImageUrl"></label>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>

                </div> *@

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Update
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <button asp-controller="Course" asp-action="ViewCourses" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Close
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>