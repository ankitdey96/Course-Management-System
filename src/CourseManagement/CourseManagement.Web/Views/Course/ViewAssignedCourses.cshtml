
    <div class="container">
        <h2>Enter Course Outline</h2>
        <form id="course-outline-form">
            <div class="form-group">
                <label for="course-title">Course Title:</label>
                <input type="text" id="course-title" name="course-title" placeholder="Enter course title" required>
            </div>
            <div class="form-group">
                <label for="course-description">Course Description:</label>
                <textarea id="course-description" name="course-description" placeholder="Enter course description" required></textarea>
            </div>

            <div id="module-container" class="module-container">
                <!-- Modules will be added here -->
            </div>

            <button type="button" class="add-module">Add Module</button>
            <button type="submit" class="submit-btn">Submit Course Outline</button>
        </form>
    </div>

    <script>
        const moduleContainer = document.getElementById('module-container');
        const addModuleButton = document.querySelector('.add-module');
        const courseOutlineForm = document.getElementById('course-outline-form');

        let moduleCount = 0;

        addModuleButton.addEventListener('click', () => {
            moduleCount++;
            const moduleDiv = document.createElement('div');
            moduleDiv.className = 'module';
            moduleDiv.innerHTML = `
                    <h3>Module ${moduleCount}</h3>
                    <div class="form-group">
                        <label for="module-${moduleCount}-title">Module Title:</label>
                        <input type="text" id="module-${moduleCount}-title" name="module-${moduleCount}-title" placeholder="Enter module title" required>
                    </div>
                    <div class="form-group">
                        <label for="module-${moduleCount}-description">Module Description:</label>
                        <textarea id="module-${moduleCount}-description" name="module-${moduleCount}-description" placeholder="Enter module description" required></textarea>
                    </div>
                    <ul class="lesson-list" id="lesson-list-${moduleCount}">
                        <!-- Lessons will be added here -->
                    </ul>
                    <button type="button" class="add-lesson" data-module-id="${moduleCount}">Add Lesson</button>
                    <span class="remove-module">Remove Module</span>
                `;

            moduleContainer.appendChild(moduleDiv);

            // Add event listener to the remove module button
            moduleDiv.querySelector('.remove-module').addEventListener('click', () => {
                moduleContainer.removeChild(moduleDiv);
            });

            // Add event listener to the add lesson button
            moduleDiv.querySelector('.add-lesson').addEventListener('click', (event) => {
                const moduleId = event.target.getAttribute('data-module-id');
                const lessonList = document.getElementById(`lesson-list-${moduleId}`);
                const lessonCount = lessonList.children.length + 1;
                const lessonItem = document.createElement('li');
                lessonItem.innerHTML = `
                        <div class="form-group">
                            <label for="module-${moduleId}-lesson-${lessonCount}">Lesson ${lessonCount}:</label>
                            <input type="text" id="module-${moduleId}-lesson-${lessonCount}" name="module-${moduleId}-lesson-${lessonCount}" placeholder="Enter lesson title" required>
                            <span class="remove-lesson">Remove Lesson</span>
                        </div>
                    `;
                lessonList.appendChild(lessonItem);

                // Add event listener to the remove lesson button
                lessonItem.querySelector('.remove-lesson').addEventListener('click', () => {
                    lessonList.removeChild(lessonItem);
                });
            });
        });

        courseOutlineForm.addEventListener('submit', (event) => {
            event.preventDefault();
            // You can process the form data here
            alert('Course outline submitted!');
        });
    </script>

